{
  "name": "svelte-test-starter",
  "version": "1.0.0",
  "repository": "git@github.com:newbornfrontender/svelte-test-starter.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.5.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.2",
    "commitlint": "^8.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-svelte3": "^2.4.2",
    "htmlnano": "^0.2.3",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17",
    "postcss-html": "^0.36.0",
    "postcss-load-config": "^2.1.0",
    "postcss-preset-env": "^6.6.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.6.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-pluginutils": "^2.8.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-order": "^3.0.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^2.14.3"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4"
  },
  "scripts": {
    "format": "prettier --svelte-sort-order scripts-markup-styles --write **/*.{svelte,html,js,json,md}",
    "lint:css": "stylelint --fix **/*.{svelte,css}",
    "lint:css:check": "stylelint-config-prettier-check",
    "lint:js": "eslint . --fix --ext svelte,js",
    "lint:js:check": "eslint --print-config src/index.js | eslint-config-prettier-check",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "eslintIgnore": [
    "plugins",
    "public",
    "*.js"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning"
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{svelte,js}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{svelte,css}": [
      "stylelint --fix",
      "git add"
    ],
    "**/*.{svelte,html,js,json,md}": [
      "prettier --svelte-sort-order scripts-markup-styles --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
